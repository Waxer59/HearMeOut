{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "outDir": "dist",
    "removeComments": true,
    "module": "CommonJS",
    "declaration": true,
    "target": "ESNext",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/*.ts"],
  "exclude": ["node_modules/**/*", "dist"]
}
